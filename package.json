{
  "name": "the-platform",
  "version": "0.8.0",
  "author": "Jared Palmer <jared@palmer.net>",
  "repository": "palmerhq/the-platform",
  "description": "React Hooks and Suspense-ready Components for Web API's and elements",
  "keywords": [
    "react",
    "react-dom",
    "suspense",
    "hooks",
    "react-hooks",
    "react-suspense",
    "react-cache"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "source": "src/index.tsx",
  "files": [
    "dist",
    "typings"
  ],
  "scripts": {
    "start": "NODE_ENV=development babel -w ./src --extensions \".ts,.tsx\" --out-dir dist",
    "build": "rimraf dist && NODE_ENV=production babel ./src --extensions \".ts,.tsx\" --out-dir dist && tsc",
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/**/*' 'exampe/src/**/*' 'example/README.md' 'README.md'",
    "test": "echo yolo",
    "prepare": "npm run build",
    "deploy": "np",
    "precommit": "lint-staged"
  },
  "peerDependencies": {
    "react": ">=16.6.0",
    "react-dom": ">=16.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.1.2",
    "@types/lodash.throttle": "^4.1.4",
    "@types/react": "^16.4.18",
    "doctoc": "^1.3.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "np": "^3.0.4",
    "prettier": "^1.14.3",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0",
    "rimraf": "^2.6.2",
    "tsconfig-palmerhq": "^1.0.2",
    "tslint-config-palmerhq": "^1.0.2",
    "typescript": "^3.1.3"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "npm run format",
      "git add"
    ],
    "README.md": [
      "doctoc --maxlevel 3 README.md"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": true
  },
  "dependencies": {
    "json2mq": "^0.2.0",
    "lodash.throttle": "^4.1.1",
    "react-cache": "^2.0.0-alpha.0"
  }
}
