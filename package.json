{
  "name": "the-platform",
  "version": "0.9.3",
  "author": "Jared Palmer <jared@palmer.net>",
  "repository": "palmerhq/the-platform",
  "description": "React Hooks and Suspense-ready Components for Web API's and elements",
  "keywords": [
    "react",
    "react-dom",
    "suspense",
    "hooks",
    "react-hooks",
    "react-suspense",
    "react-cache"
  ],
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development babel -w ./src --out-dir .",
    "build": "NODE_ENV=production babel ./src --out-dir .",
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/**/*' 'exampe/src/**/*' 'example/README.md' 'README.md'",
    "test": "echo yolo",
    "prepare": "npm run build",
    "precommit": "lint-staged",
    "deploy": "np"
  },
  "peerDependencies": {
    "react": ">=16.6.0",
    "react-dom": ">=16.6.0"
  },
  "dependencies": {
    "json2mq": "^0.2.0",
    "react-cache": "^2.0.0-alpha.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "doctoc": "^1.3.1",
    "fs-extra": "^7.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "np": "^3.0.4",
    "prettier": "^1.14.3",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "npm run format",
      "git add"
    ],
    "README.md": [
      "doctoc --maxlevel 3 README.md"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": true
  }
}
